{
	"name": "retrospect-ai",
	"version": "1.0.0",
	"description": "AI-powered insights plugin for Obsidian",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "eslint ."
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "jsdom",
		"setupFilesAfterEnv": [
			"<rootDir>/src/__tests__/setup.ts"
		],
		"moduleNameMapper": {
			"^src/(.*)$": "<rootDir>/src/$1"
		},
		"transform": {
			"^.+\\.tsx?$": [
				"ts-jest",
				{
					"tsconfig": "tsconfig.json"
				}
			]
		},
		"testMatch": [
			"**/__tests__/**/*.test.ts?(x)"
		],
		"collectCoverageFrom": [
			"src/**/*.{ts,tsx}",
			"!src/**/*.d.ts",
			"!src/__tests__/**"
		],
		"moduleDirectories": [
			"node_modules",
			"src/__tests__/__mocks__"
		]
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@eslint/js": "latest",
		"@types/jest": "^29.5.14",
		"@types/node": "^16.11.6",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"@typescript-eslint/eslint-plugin": "latest",
		"@typescript-eslint/parser": "latest",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"obsidian": "^1.8.7",
		"ts-jest": "^29.1.1",
		"ts-mockito": "^2.6.1",
		"tslib": "2.4.0",
		"typescript": "4.9.5"
	},
	"dependencies": {
		"openai": "^4.83.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	}
}
